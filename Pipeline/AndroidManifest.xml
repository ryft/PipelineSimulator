<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.ryft.pipeline"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <activity
            android:name="uk.co.ryft.pipeline.SetupActivity"
            android:label="@string/title_activity_setup" >
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="uk.co.ryft.pipeline.ui.SimulatorActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.ryft.pipeline.ui.MainActivity" />
        </activity>
        <activity
            android:name="uk.co.ryft.pipeline.ui.SceneActivity"
            android:label="@string/title_activity_scene" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.ryft.pipeline.ui.MainActivity" />
        </activity>
        
        <activity
            android:name="uk.co.ryft.pipeline.ui.PrimitiveActivity"
            android:label="@string/title_activity_primitive_add" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.ryft.pipeline.ui.SceneActivity" />
        </activity>
        <activity
            android:name="uk.co.ryft.pipeline.ui.builders.CylinderActivity"
            android:label="@string/title_activity_cylinder_add"
            android:windowSoftInputMode="stateUnchanged" ><!-- Prevent soft keyboard spuriously opening at startup -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.ryft.pipeline.ui.SceneActivity" />
        </activity>
        <activity
            android:name="uk.co.ryft.pipeline.ui.builders.CuboidActivity"
            android:label="@string/title_activity_cuboid_add"
            android:windowSoftInputMode="stateUnchanged" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.ryft.pipeline.ui.SceneActivity" />
        </activity>
        <activity
            android:name="uk.co.ryft.pipeline.ui.builders.CameraActivity"
            android:label="@string/title_activity_camera_add"
            android:windowSoftInputMode="stateUnchanged" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.co.ryft.pipeline.ui.SceneActivity" />
        </activity>
    </application>

</manifest>