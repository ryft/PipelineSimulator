<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/navigator_block_inner_width"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <View
        android:layout_width="@dimen/navigator_detail_connector_thickness"
        android:layout_height="@dimen/navigator_detail_connector_length"
        android:background="@android:color/background_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navigator_element_array"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="@dimen/navigator_detail_connector_thickness"
                android:layout_height="@dimen/navigator_detail_connector_length"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/background_light"
                android:rotation="20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navigator_detail_text_margin"
                android:layout_marginRight="@dimen/navigator_detail_text_margin"
                android:text="@string/navigator_vertex"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="@dimen/navigator_detail_connector_thickness"
                android:layout_height="@dimen/navigator_detail_connector_length"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/background_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navigator_detail_text_margin"
                android:layout_marginRight="@dimen/navigator_detail_text_margin"
                android:text="@string/navigator_colour"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="@dimen/navigator_detail_connector_thickness"
                android:layout_height="@dimen/navigator_detail_connector_length"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/background_light"
                android:rotation="-20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/navigator_detail_text_margin"
                android:layout_marginRight="@dimen/navigator_detail_text_margin"
                android:text="@string/navigator_normal"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>